{
  "name": "@socialgouv/anonymify",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "./build.sh",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.3",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "turbo": "1.0.24"
  },
  "turbo": {
    "verbose": true,
    "pipeline": {
      "test": {
        "dependsOn": [
          "build"
        ]
      },
      "lint": {},
      "dev": {
        "cache": false
      }
    }
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  }
}
